package com.models;

import jakarta.persistence.*;
import java.util.HashSet;
import java.util.Set;

@Entity
@Table(name = "shipping_companies")
public class ShippingCompany {
    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    private Long id;

    @Column(nullable = false, unique = true)
    private String name;

    @ElementCollection
    @CollectionTable(name = "shipping_coverage", joinColumns = @JoinColumn(name = "company_id"))
    @Column(name = "region")
    private Set<String> coverageRegions = new HashSet<>();

    // Required no-arg constructor
    public ShippingCompany() {}

    // Convenience constructor
    public ShippingCompany(String name) {
        this.name = name;
    }

    // Getters and setters
    public Long getId() {
        return id;
    }

    public void setId(Long id) {
        this.id = id;
    }

    public String getName() {
        return name;
    }

    public void setName(String name) {
        this.name = name;
    }

    public Set<String> getCoverageRegions() {
        return coverageRegions;
    }

    public void setCoverageRegions(Set<String> coverageRegions) {
        this.coverageRegions = coverageRegions;
    }

    // Helper methods for managing regions
//    public void addRegion(String region) {
//        coverageRegions.add(region);
//    }
//
//    public void removeRegion(String region) {
//        coverageRegions.remove(region);
//    }

    // Optional toString()
    @Override
    public String toString() {
        return "ShippingCompany{" +
                "id=" + id +
                ", name='" + name + '\'' +
                ", coverageRegions=" + coverageRegions +
                '}';
    }
}