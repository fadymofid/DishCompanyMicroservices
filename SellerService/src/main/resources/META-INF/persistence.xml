<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="sellerPU" transaction-type="JTA">
        <!-- JNDI name of the DataSource you must define on your app server -->
        <jta-data-source>java:/jdbc/SellerDS</jta-data-source>

        <properties>
            <!-- Automatically create or update database schema -->
            <property name="jakarta.persistence.schema-generation.database.action"
                      value="update"/>

            <!-- Log SQL for debugging -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>

            <!-- Use the PostgreSQL dialect (adjust if using another DB) -->
            <property name="hibernate.dialect"
                      value="org.hibernate.dialect.PostgreSQLDialect"/>
        </properties>
    </persistence-unit>
</persistence>
