package com.example.seller.DAO;


import com.example.seller.models.OrderItem;
import jakarta.ejb.Stateless;
import jakarta.persistence.EntityManager;
import jakarta.persistence.PersistenceContext;

import java.sql.Connection;
import java.util.List;

@Stateless
public class OrderItemDAO {

    private Connection conn;

    public OrderItem(Connection conn){
        this.conn = conn;
    }

    private EntityManager em;

    public void save(OrderItem item) {
        em.persist(item);
    }

    public OrderItem find(Long id) {
        return em.find(OrderItem.class, id);
    }

    public List<OrderItem> findByOrderId(Long orderId) {
        return em.createQuery("SELECT oi FROM OrderItem oi WHERE oi.order.id = :orderId", OrderItem.class)
                .setParameter("orderId", orderId)
                .getResultList();
    }
}